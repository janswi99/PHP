#include<iostream>

using namespace std;


void quick_sort(int *tab, int lewy, int prawy)
{
	int i = lewy, j = prawy, pivot = tab[(lewy+prawy)/2];

	do{
		while(tab[i]<pivot)
            i++;
		while(tab[j]>pivot)
            j--;

		if (i<=j){
			swap(tab[i],tab[j]);
			i++;
			j--;
		}
	}while (i<=j);

	if(j > lewy)
        quick_sort(tab, lewy, j);
	if(i < prawy)
        quick_sort(tab, i, prawy);
}

int main()
{
	int *tab, n;

  	cout << "Ile liczb bedziesz chcial posortowac? "; cin >> n;
  	tab = new int [n];

  	for(int i=0;i<n;i++){
        cout << "Podaj " << i+1 << ". liczbe: "; cin >> tab[i];
    }

  	quick_sort(tab,0, n-1);

  	for(int i=0;i<n;i++)
        cout<<tab[i]<<" ";

  	return 0;
}

