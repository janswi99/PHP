// Sortowanie przez wstawianie

#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
    int n;
    cout << "Podaj wielkosc tablicy: "; cin >> n;
    int *T = new int [n];

    for (int i=0; i<n; i++){
        cout << "Podaj " << i+1 << ". element tablicy: ";
        cin >> T[i];
    }

    cout << "Tablica przed sortowaniem: " << endl;
    for (int i=0; i<n; i++)
        cout << setw(3) << T[i] << " ";

    int pom, j;
    for (int i=1; i<n; i++){
        pom = T[i];
        for (j=i-1; j>=0 && T[j] > pom; j--)
                T[j+1] = T[j];
        T[j+1]=pom;
    }

    cout << endl <<"Tablica po sortowaniu: " << endl;
    for (int i=0; i<n; i++)
        cout << setw(3) << T[i] << " ";

    delete []T;

    return 0;
}
