#include<iostream>
#include<cstdlib>

using namespace std;

void szukaj(int *T, int n, int &minimum, int &maksimum)
{
	int i = 2;
	if(n>=2)
	{
		if(T[0]>T[1])
		{
			minimum = T[1];
			maksimum = T[0];
		}
		else
		{
			minimum = T[0];
			maksimum = T[1];
		}
		while(i+2<=n)
		{
			if(T[i]>T[i+1])
			{
				if(T[i]>maksimum)
					maksimum = T[i];
				if(T[i+1]<minimum)
					minimum = T[i+1];
			}
			else
			{
				if(T[i+1]>maksimum)
					maksimum = T[i+1];
				if(T[i]<minimum)
					minimum = T[i];
			}
			i+=2;
		}
		if(n%2==1)
		{
			if(T[i] > maksimum)
                maksimum = T[i];
			if(T[i] < minimum)
                minimum = T[i];
		}
	}
	else
		minimum = maksimum = T[0];
}

int main()
{
    int n, minimum, maksimum, *T;
    cout << "Ilosc elementow: "; cin >> n;
    T = new int [n];

    for(int i=0; i<n; i++)
        cin >> T[i];

	szukaj(T, n, minimum, maksimum);

	cout<<"MIN: "<<minimum<<"\nMAX: "<<maksimum<<endl;

	return 0;
}

